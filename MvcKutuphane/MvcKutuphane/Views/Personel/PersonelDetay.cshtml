@model MvcKutuphane.Models.Entity.TBLPERSONEL
@{
    ViewBag.Title = "PersonelDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
<div class="form-group" style="margin-top:20px">
    <div>
        <label>PERSONEL ID</label>
        @Html.TextBoxFor(p => p.ID, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>PERSONEL AD</label>
        @Html.TextBoxFor(p => p.AD, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>PERSONEL SOYAD</label>
        @Html.TextBoxFor(p => p.SOYAD, new { @class = "form-control" })
    </div>
    <button class="btn btn-info" style="margin-top:10px;">Kaydet</button>
</div>
}

