@model MvcKutuphane.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "Yazar Ekle";
    Layout = "~/Views/Shared/Layout.cshtml";
}



@using (Html.BeginForm("YazarEkle", "Yazar", FormMethod.Post))
{
<div class="form-group" style="margin-top:20px;">

    <div>
        @Html.LabelFor(y => y.AD)
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
        @Html.ValidationMessageFor(y => y.AD, "", new { @style = "color:red" })
    </div>
    <br />
    <div>
        @Html.LabelFor(y => y.SOYAD)
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(y => y.SOYAD, "", new { @style = "color:red" })
    </div>
    <br />
    <div>
        @Html.LabelFor(y => y.DETAY)
        @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })
    </div>
    <button class="btn btn-primary" style="margin-top:10px">Kaydet</button>
</div>
}