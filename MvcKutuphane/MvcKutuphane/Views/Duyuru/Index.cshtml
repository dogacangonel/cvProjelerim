@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Duyurular</h2>

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>DUYURU NO</th>
        <th>KATEGORİ</th>
        <th>TARİH</th>
        <th>SİL</th>
        <th>İÇERİK</th>
    </tr>

    @foreach (var duy in Model)
    {
<tr>
    <td>@duy.ID</td>
    <td>@duy.KATEGORI</td>
    <td>@Convert.ToDateTime( duy.TARIH).ToString("dd/MM/yyyy")</td>
    <td>
        @Html.ActionLink("Sil", "DuyuruSil", new { duy.ID },
   new { @class = "btn btn-danger", @onclick = "return confirm('Silmek istediğinize emin misiniz?')" })
    </td>
    <td><a href="/Duyuru/DuyuruDetaylar/@duy.ID" class="btn btn-group" style="background-color:orange; color:white">Detaylar</a></td>
</tr>
    }
</table>
<a href="/Duyuru/DuyuruEkle" class="btn btn-primary" style="margin-top:10px">Duyuru Ekle</a>