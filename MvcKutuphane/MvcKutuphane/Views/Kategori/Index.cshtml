@using MvcKutuphane.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h2 style="margin-bottom:20px;">Kategoriler</h2>

@using (Html.BeginForm("Index", "Kategori", FormMethod.Get))
{
    <b>Aradığınız Kategori Adını Giriniz: </b>@Html.TextBox("p")
    <input type="submit" value="Ara" />
}


<table class="table table-striped" style="margin-top:20px; font-size:16px;">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>AD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>
                @Html.ActionLink("Sil", "KategoriSil", new { item.ID }, new
                {
                    item.ID,
                    @class = "btn btn-danger",
           onclick = "return confirm('Silmek istediğinize emin misiniz?')"
                })
        </td>
        <td><a href="/Kategori/KategoriDetay/@item.ID" class="btn btn-success">Güncelle</a></td>
    </tr>
}

</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary">Yeni Kategori Ekle</a>