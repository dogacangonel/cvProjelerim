@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>



@foreach (var duy in Model)
{

    string renk = "";
    if (duy.KATEGORI=="Yeni Kitap")
    {
        renk = "bg-info text-white";
    }
    else if (duy.KATEGORI=="Kitapların Gecikmesi Hakkında")
    {
        renk = "bg-danger text-white";
    }
    else if (duy.KATEGORI=="İletişim Hakkında")
    {
        renk = "bg-warning text-white";

    }
    else
    {
        continue;
    }
    <div class="post">
        <div class="user-block @renk">
            <img class="img-circle img-bordered-sm " src="~/AdminLTE-3.0.4/dist/img/2.png" alt="user image">
            <span class="username" >
                <a href="#" style="color:white;">@duy.KATEGORI</a>
            </span>
            <span class="description @renk">@Convert.ToDateTime(duy.TARIH).ToString("dd/MM/yyyy")</span>
        </div>
        <!-- /.user-block -->
        <p>
           @duy.ICERIK
        </p>
    </div>
}

