@model  MvcKutuphane.Models.Entity.TBLUYELER

@using (Html.BeginForm("Index", "Panel", FormMethod.Post))
{
    <form class="form-horizontal">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Adınız</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.AD, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="SOYAD" class="col-sm-2 col-form-label">Soyadınız</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.SOYAD, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="KULLANICIADI" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.KULLANICIADI, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="SIFRE" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.SIFRE, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="FOTOGRAF" class="col-sm-2 col-form-label">Fotoğraf</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.FOTOGRAF, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="OKUL" class="col-sm-2 col-form-label">Okul</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.OKUL, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Kullanım şartlarını okudum. <a href="#">Kabul ediyorum.</a>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Kaydet</button>
            </div>
        </div>
    </form>
}