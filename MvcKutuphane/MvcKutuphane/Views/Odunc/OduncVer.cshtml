@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("OduncVer", "Odunc", FormMethod.Post))
{
    <div class="form-group" style="margin-top:20px;">
        <div>
            <label>ÜYE ID</label>
            @Html.DropDownListFor(h=>h.TBLUYELER.ID,(List<SelectListItem>)ViewBag.dgr1,new { @class = "form-control" })
        </div>
        <br />
        <div>
            <label>KİTAP</label>
            @Html.DropDownListFor(h=>h.TBLKITAP.ID,(List<SelectListItem>)ViewBag.dgr2,new { @class="form-control"})
        </div>
        <br />
        <div>
            <label>PERSONEL ID</label>
            @Html.DropDownListFor(h=>h.TBLPERSONEL.ID,(List<SelectListItem>)ViewBag.dgr3,new { @class="form-control"})
        </div>
        <br />
        <div>
            <label>KİTAP ALIŞ TARİHİ</label>
            <!--Burada videodan ayrı textboxfor içinde  html Helper ile  value kullanarak varsayılan değer gönderdim değer gönderdim
                Dikkat edilmesi gereken  value kısmının v'si büyük olması-->
            @Html.TextBoxFor(h => h.ALISTARIHI, new { @Value = DateTime.Now.ToShortDateString(), @class = "form-control" })
        </div>
        <br />
        <div>
            <label>KİTAP İADE TARİHİ</label>
            @Html.TextBoxFor(h => h.IADETARIHI, new { @Value = DateTime.Now.AddDays(7).ToShortDateString(), @class = "form-control" })
        </div>
        <button class="btn btn-group" style="background-color:cornflowerblue; color:azure; margin-top:10px;">Ödünç Ver</button>
    </div>
}

