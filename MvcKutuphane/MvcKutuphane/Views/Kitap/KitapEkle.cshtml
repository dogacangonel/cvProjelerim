@model MvcKutuphane.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "Kitap Ekle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Ekle</h2>

@using (Html.BeginForm("KitapEkle", "Kitap", FormMethod.Post))
{
<div class="form-group" style="margin-top:20px">
    
    <div>
        <label>KİTAP ADI</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>YAZAR ADI VE SOYADI</label>
        @Html.DropDownListFor(x=>x.TBLYAZAR.ID,(List<SelectListItem>)ViewBag.dgr2,new {@class="form-control"})
    </div>
    <br />
    <div>
        <label>KATEGORİ</label>
        @Html.DropDownListFor(x=>x.TBLKATEGORI.ID,(List<SelectListItem>)ViewBag.dgr1,new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>BASIM YILI</label>
        @Html.TextBoxFor(x => x.BASIMYIL, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>YAYINEVİ</label>
        @Html.TextBoxFor(x => x.YAYINEVI, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>SAYFA</label>
        @Html.TextBoxFor(x => x.SAYFA, new { @class = "form-control" })
    </div>
    <br />
    <button class="btn btn-primary" style="margin-top:10px">Kaydet</button>
</div>
}

