@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="margin-bottom:15px">Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <b>Aranacak İfadeyi giriniz: </b>@Html.TextBox("p")
    <input type="submit" value="Ara" />
}


<table class="table table-striped" style="margin-top:20px;font-size:16px">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>AD</th>
        <th>YAZAR</th>
        <th>KATEGORİ</th>
        <th>BASIM YILI</th>
        <th>YAYINEVİ</th>
        <th>SAYFA</th>
        <th>DURUM</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var ktp in Model)
    {
        <tr>
            <td>@ktp.ID</td>
            <td>@ktp.AD</td>
            <td>@ktp.TBLYAZAR.AD @ktp.TBLYAZAR.SOYAD</td>
            <td>@ktp.TBLKATEGORI.AD</td>
            <td>@ktp.BASIMYIL</td>
            <td>@ktp.YAYINEVI</td>
            <td>@ktp.SAYFA</td>
            <td>@ktp.DURUM</td>
            <td>
                @Html.ActionLink("Sil", "KitapSil", new { ktp.ID }, new
                {
                    @class = "btn btn-danger",
           onclick = "return confirm('Silmek istediğinize emin misiniz')"
                })
        </td>
        <td><a href="/Kitap/KitapDetay/@ktp.ID" class="btn btn-success">Güncelle</a></td>
    </tr>
}

</table>
<a href="/Kitap/KitapEkle" class="btn btn-primary">Kitap Ekle</a>

